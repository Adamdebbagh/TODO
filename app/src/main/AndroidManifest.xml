<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tekwin.todo" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ToDoManagerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToDoItem"
            android:label="@string/title_activity_to_do_item" >
        </activity>
        <activity
            android:name=".ToDoListAdapter"
            android:label="@string/title_activity_to_do_list_adapter" >
        </activity>
        <activity
            android:name=".AddToDoActivity"
            android:label="@string/title_activity_add_to_do" >
        </activity>
    </application>

</manifest>
